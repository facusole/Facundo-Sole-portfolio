---
import Card from "./card/Card.astro";
---

<section class="section">
    <h2>Selected projects</h2>
    <div class="projects__container">
        <Card
            src="/assets/projects/plumaDePapel.webp"
            alt="E-commerce website for a stationary called Pluma de Papel, where you can make the buying flow, from selecting an item all the way through the payment"
            title="E-commerce"
            tags="React, CSS, Firebase"
            desc="E-commerce made with React.js, with a custom searchbar with auto-suggestions and a checkout section. Utilizes firebase to store the items"
            link="https://pluma-de-papel.vercel.app"
        />
        <Card
            src="/assets/projects/Pokedex.webp"
            alt="Pokedex with a modern aesthetic, made with React as a SPA."
            title="Pokedex!"
            tags="React, TailwindCSS"
            desc="Using PokeAPI, fully functional Pokedex up until 5th generation. It's a SPA made with React"
            link="https://pokedex-liard-sigma.vercel.app"
        />
        <Card
            src="/assets/projects/Voting.webp"
            alt="Voting app technical challenge from DailyPay, where you can submit your votes."
            title="Voting app challenge"
            tags="Next.js, TailwindCSS"
            desc="First project using Next, is a technical challenge from DailyPay. It uses a mock data file where I get the list of nominees."
            link="https://next-voting-app.vercel.app"
        />
        <Card
            src="/assets/projects/Finance.webp"
            alt="Finance table where you can keep track of your incomes and your expenses with two individual tabs."
            title="Finance table"
            tags="React, CSS"
            desc="Financial table where you can keep track of your incomes and your expenses, using localStorage to persist your data"
            link="https://finances-table.vercel.app"
        />
        
    </div>
    <div class="projects__page">
        <a href="/projects">
           <span class="view__project">View all projects</span><span class="view__project"><img src="/assets/card__rightArrow.svg" alt="Right arrow indicating that is an external link andyou will be redirected"/></span>
        </a>
    </div>
</section>

<script>
    const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
              if(entry.isIntersecting) {
                  entry.target.classList.add('fade__animation')
              }
          })
      })
  
      const section = document.querySelectorAll('.section')
  
      section.forEach((el) => observer.observe(el))
  </script>

<style>
    section {
        margin-block: 3rem;
    }

    h2 {
        font-size: var(--fs__20);
        font-weight: var(--fw__medium);
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .projects__container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 1rem;

        overflow-x: scroll;
        scroll-snap-type: x mandatory;

        scrollbar-width: none;
    }

    .projects__container::-webkit-scrollbar {
        display: none;
    }

    .projects__page {
        display: flex;
        justify-content: end;
    }

    a {
        display: inline-flex;
        align-items: center;
        margin-top: 2rem;

        font-size: var(--fs__16);
        text-decoration: none;
        transition: all .2s linear;
    }

    .view__project {
        color: var(--clr__primary__purple);
        font-weight: var(--fw__semibold);

        background: var(--clr__secondary__purple);
        border: solid 1px var(--clr__primary__purple);
        border-radius: 100vh;

        padding: 0.5rem 1rem;
    }

    a img {
        width: 1.5rem;
        aspect-ratio: 1/1;
    }

    @media (min-width: 768px) {

        section {
            margin-block: 5rem;
        }

        a {
            font-size: var(--fs__18);
        }
        a:is(:hover, :focus-within) {
            scale: 1.02;
            translate: 1rem;
        }

        h2 {
            font-size: var(--fs__28);
        }
    }

    @media (min-width: 1024px) {

        section {
            margin-block: 7rem;
        }

        a {
            font-size: var(--fs__20);
        }
        h2 {
            font-size: var(--fs__40);
        }
    }
</style>
