---
const { src, alt, title, desc, link, tags } = Astro.props;
import TagLabel from "../tagLabel/TagLabel.astro";
---

<article>
    <img src={src} alt={alt} />
    <span>
        <TagLabel tags={tags} />
    </span>
    <h3>{title}</h3>
    <p>{desc}</p>
    <a class="mobile__link" href={link} target="_blank" rel="noreferrer noopener">
        <span class="view__project">View live project</span><span class="view__project"><img src="/assets/card__rightArrow.svg" alt="Right arrow indicating that is an external link and you will be redirected"/></span>
    </a>
</article>

<style>
    article {
        width: 19rem;
        border: solid 2px var(--clr__ultra__black);
        border-radius: 2rem;
        padding: 2rem 1.5rem;

        display: flex;
        flex-direction: column;
        gap: 1rem;

        transition: 0.2s linear;

        scroll-snap-align: start;
    }

    h3 {
        font-size: var(--fs__24);
        font-weight: var(--fw__medium);
    }

    p {
        font-size: var(--fs__18);
        font-weight: var(--fw__regular);
    }

    a {
        display: flex;
        align-items: center;
        text-decoration: none;
        transition: all .2s linear;
    }

    .view__project {
        color: var(--clr__primary__purple);
        font-weight: var(--fw__semibold);

        background: var(--clr__secondary__purple);
        border: solid 1px var(--clr__primary__purple);
        border-radius: 100vh;

        padding: 0.5rem 1rem;
    }

    a img {
        width: 1.5rem;
        aspect-ratio: 1/1;
    }

    @media (min-width: 768px) {
        .view__project {
            font-size: var(--fs__18);
            font-weight: var(--fw__semibold);
        }

        a:is(:hover, :focus-within) {
            scale: 1.01;
            translate: 1rem;
        }
    }
</style>
